#!/bin/bash

handle_vault_connection() {
    if [[ -z "$VAULT_ADDR" ]]; then
        read -p "VAULT_ADDR is not set. Please enter it: " VAULT_ADDR
    fi
    
    if [[ -z "$VAULT_TOKEN" ]]; then
        read -p "VAULT_TOKEN is not set. Please enter it: " VAULT_TOKEN
    fi
    
    echo "VAULT_ADDR: $VAULT_ADDR"
    echo "VAULT_TOKEN: $VAULT_TOKEN"
}

handle_vault_connection
